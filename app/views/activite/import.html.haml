%div.top-info.pa1
  %h1 Import d'une activité


- @categories.each_with_index do |ca, i|
  -unless ca.nom.blank?
    %div.pa1.fiche.brdr-b
      %h2=ca.nom
      %table.striped.alternate
        %thead
          %tr
            %th Ajouter
            %th Produit
            %th Quantitée totale
            %th Prix (€)
            %th Date limite de réservation
            -if not @evenement
              %th Evenement
          %tbody
            - @products.each do |prd|
              -if prd.categorie_id==i+1
                %tr
                  %td=link_to "Ajouter", {:controller => :activite, :action => :import_product_as_activite, :productid => prd.id}, {:method => :put, :class => "pure-button pure-button-error"}
                  %td=link_to prd.name, product_path(prd.id)
                  %td=prd.stock
                  %td=prd.price_euro
                  %td=prd.echeance
                  -if not @evenement
                    %td=prd.event.name