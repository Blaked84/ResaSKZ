= form_for @gamme do |f|
  - if @gamme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gamme.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @gamme.errors.full_messages.each do |msg|
          %li= msg

  .container
    .field.pure-control-group
      = f.label :nom
      <br/>
      = f.text_field :nom, :class => "pure-input-1-3"
    .field.pure-control-group
      = f.label :description
      <br/>
      = f.text_field :description

    = f.submit 'Enregistrer', class: "pure-button pure-button-success"
