= form_for @lit do |f|
  - if @lit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lit.errors.count, "error")} prohibited this lit from being saved:"
      %ul
        - @lit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :personne_id
    = f.number_field :personne_id
  .field
    = f.label :chambre_id
    = f.number_field :chambre_id
  .actions
    = f.submit 'Save'
