= form_for @user, :url => user_infos_user_path(@user), :method => :post  do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = render :partial => "form_fields", :locals => {:f => f}

  =f.fields_for @user.referant do |fp|
    -@personnne = @user.referant
    = render :partial => "personnes/form_fields", :locals => {:f => fp, :reg => true}


  .actions
    = f.submit 'Save'
