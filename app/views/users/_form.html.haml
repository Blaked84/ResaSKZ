= form_for @user, :html => {:class => "pure-form pure-form-aligned"} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = render :partial => "form_fields", :locals => {:f => f, :reg => false}
  .actions
    = f.submit 'Save'
