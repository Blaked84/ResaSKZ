  =f.label :taille
  
  =f.text_field :taille, :class => "pure-input-1-3"
.field.pure-control-group
  =f.label :pointure
  
  =f.text_field :pointure, :class => "pure-input-1-3"
.field.pure-control-group
  =f.label :taillevetement_id
  
  =f.select :taillevetement_id, Taillevetement.all.map{|t| [t.name,t.id]}, :class => "pure-input-1-3"
