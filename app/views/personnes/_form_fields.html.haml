.field.pure-control-group
  =f.label :commentaires
  
  =f.text_area :commentaires, :class => "pure-input-1-3"
-if can? :see_admin, User
  .field.pure-control-group
    =f.label :commentaires_admin
    
    =f.text_area :commentaires_admin, :class => "pure-input-1-3"
