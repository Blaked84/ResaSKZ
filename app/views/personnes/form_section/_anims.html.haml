#les_anims.divider.scrollspy
.container
  .row
    .col.s12.light-blue.white-text.center
      %h4 Les Anim's
.section.sfullscreen
  .container
    .row
      %h5 Choisis les anim's auxquelles tu veux participer :
      Classe les anim's en fonction de ta préférence (0 à 7). 0 ou rien = ça ne m'interesse pas
      %br/
      - Product.where(categorie: Categorie.find(7)).each do |p|
        = fc.fields_for :products do |fp|
          - if p == Product.where(categorie: Categorie.find(7)).first
            .input-field.col.s12.m8.offset-m2
              = fp.collection_select :id, Product.where(id: p.id), :id, :oui, { :prompt => "#{p.name} (#{p.price_euro.round}€)", :include_blank => "Non" }
              = fp.label p.name
      - Product.where(categorie: Categorie.find(7), votable: true).each do |pvotable|
        = fc.fields_for :products do |fp|
          .input-field.col.s6.m3
            = fp.select :preference, options_for_select(Product.preferences_form), { :prompt => "#{pvotable.name} (#{pvotable.price_euro.round}€)" }
            = fp.hidden_field :id,  :value => pvotable.id
            = fp.label pvotable.name

    %br/
    %a.btn.waves-effect.waves-light.right{:href => "#la_super_option"}
      Suivant
      %i.material-icons.right send

