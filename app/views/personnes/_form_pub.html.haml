= form_for @personne, :url => personne_infos_personne_path(@personne), :html => {:class => "col s12"}, :method => :post do |f|
  - if @personne.errors.any?
    #error_explanation
      %h2= "#{pluralize(@personne.errors.count, "error")} prohibited this personne from being saved:"
      %ul
        - @personne.errors.full_messages.each do |msg|
          %li= msg 

  = render :partial => "new_fields", :locals => {:f => f, :reg => @reg_pers, personne: @personne}

  .actions
    = f.submit 'Save', :class => "pure-button pure-button-success"
