%div.top-info.pa1
  %h1
    Product
    =@evenement

- @categories.each_with_index do |ca, i|
  %div.pa1.fiche.brdr-b
    %h2=ca.nom
    %table.striped.alternate
      %thead
        %tr
          %th Produit
          %th Quantitée totale
          %th Prix (€)
          %th Date limite de réservation
        %tbody
          - @products.each do |prd|
            -if prd.categorie_id==i+1
              %tr
                %td=link_to prd.name, product_path(prd.id)
                %td=prd.stock
                %td=prd.price_euro
                %td=prd.echeance


