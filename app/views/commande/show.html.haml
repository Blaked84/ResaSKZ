%h1
  Commande #
  =@commande.id

%table.striped.alternate
  %thead
    %tr
      %th Commande ID
      %th Nom
      %th Assurance
      %th Statut
  %tbody
    %tr
      %td=@commande.id
      %td=@personne
      %td=conditional_format(@commande.assurance)
      %td=conditional_format(@commande.status)

%h2
