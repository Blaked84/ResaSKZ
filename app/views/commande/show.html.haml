%table.striped.alternate
  %thead
    %tr
      %th ID
      %th date
      %th Montant
      
  %tbody
    - @paiements.each do |p|
      %tr
        %td=p.id
        %td=p.date
        %td=p.amount_euro
    %tr 
      %td
        %hr
      %td
        %strong Total
      %td=@totalpaiement

