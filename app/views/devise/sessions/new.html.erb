<div class="center txtcenter fiche brdr-b mw700p">
	<div class="grid-2-small-1">
		<div class="pa1">
		<h2>Connexion Arts et Métiers</h2>
		<%= render "devise/shared/linkscas" %>
		</div>

		<div class=" pa1">
		<h2>Connexion invité</h2>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "pure-form"}) do |f| %>
				
				<fieldset class="pure-group">
				<%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "pure-input-1"%>
				<%= f.password_field :password, :placeholder => "Mot de passe", :class => "pure-input-1" %>
				</fieldset>
					<% if devise_mapping.rememberable? -%>
					<div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Se souvenir de moi' %></div>
					<% end -%>

					<div><%= f.submit "Connexion invité", :class => "pure-button pure-button-primary pure-input-1" %></div>
					<% end %>
					<%= render "devise/shared/links" %>
				</div>
		</div>
</div>
